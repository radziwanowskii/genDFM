## Flags for including Armadillo
PKG_CPPFLAGS = $(shell pkg-config --cflags armadillo)
PKG_LIBS = $(shell pkg-config --libs armadillo)

## If pkg-config is not available or doesn't work, fallback to manual paths
## Uncomment and adjust these paths if needed:
# PKG_CPPFLAGS = -I/usr/local/include
# PKG_LIBS = -L/usr/local/lib -larmadillo

## Rcpp and RcppArmadillo
PKG_CXXFLAGS = $(shell $(R_HOME)/bin/Rscript -e "Rcpp:::CxxFlags()")
PKG_LIBS += $(shell $(R_HOME)/bin/Rscript -e "RcppArmadillo:::LdFlags()")

PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -larmadillo

PKG_CXXFLAGS = $(shell $(R_HOME)/bin/Rscript -e "Rcpp:::CxxFlags()")
PKG_LIBS = $(shell $(R_HOME)/bin/Rscript -e "RcppArmadillo:::LdFlags()")